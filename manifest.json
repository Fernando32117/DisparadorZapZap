{
	"manifest_version": 3,
	"name": "Disparador ZapZap(Dev)",
	"version": "0.1.0",
	"permissions": ["tabs", "storage", "alarms"],
	"host_permissions": ["https://web.whatsapp.com/*"],
	"background": {
		"service_worker": "src/background/index.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "assets/raio.png"
	},
	"content_scripts": [
		{
			"matches": ["https://web.whatsapp.com/*"],
			"js": [
				"src/shared/constantes.js",
				"src/shared/tempo.js",
				"src/content/seletores-whatsapp.js",
				"src/content/validacao-chat.js",
				"src/content/envio-mensagem.js",
				"src/content/index.js"
			]
		}
	]
}
